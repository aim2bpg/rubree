<%= form_with model: @regular_expression,
              url: regular_expressions_path,
              html: { data: { turbo_frame: "regexp", controller: "regexp-form", action: "input->regexp-form#submit" } } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 bg-gray-900 rounded-lg shadow-lg p-4 mb-4">

    <div class="bg-gray-800 p-4 rounded-lg shadow-inner border border-gray-700 flex flex-col">
      <div class="flex items-center justify-between mb-2">
        <label class="block text-sm font-bold text-white" for="regular_expression_expression">
          Your regular expression:
        </label>
        <div class="flex items-center space-x-1 text-xs text-white">
          <span class="text-gray-400">Options:</span>
          <%= f.text_field :options,
                id: "regular_expression_options",
                class: "w-8 px-1 py-0.5 bg-gray-900 border border-gray-700 rounded text-white text-xs focus:ring-2 focus:ring-blue-500 text-left",
                placeholder: "imx",
                autocomplete: "off" %>
        </div>
      </div>
      <%= f.text_area :expression,
            class: "w-full px-4 py-2 min-h-[120px] bg-gray-900 border border-gray-700 rounded-md text-white focus:ring-2 focus:ring-blue-500 resize-y" %>
    </div>

    <!-- Your test string and substitution -->
    <div class="bg-gray-800 p-4 rounded-lg shadow-inner border border-gray-700 flex flex-col">
      <div class="flex items-center justify-between mb-2">
        <label class="block text-sm font-bold text-white" for="regular_expression_test_string">
          Your test string:
        </label>
        <div class="flex items-center space-x-1 text-xs text-white">
          <span class="text-gray-400">Substitution:</span>
          <%= f.text_field :substitution,
                  id: "regular_expression_substitution",
                  class: "w-50 px-1 py-0.5 bg-gray-900 border border-gray-700 rounded text-white text-xs focus:ring-2 focus:ring-blue-500 text-left resize-y",
                  placeholder: "\\1, \\2",
                  autocomplete: "off" %>
        </div>
      </div>
      <%= f.text_area :test_string,
            class: "w-full px-4 py-2 min-h-[120px] bg-gray-900 border border-gray-700 rounded-md text-white focus:ring-2 focus:ring-blue-500 resize-y" %>
    </div>
  </div>
<% end %>
