<div class="bg-gray-900 rounded-lg shadow-lg pt-4 pb-4 pl-8 pr-8 text-gray-400 text-sm leading-relaxed text-center mx-2 md:mx-0">
  <div class="inline-block text-left max-w-full w-full">

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mx-auto justify-items-center" style="grid-template-columns: 1fr 1fr 0.7fr;">

      <!-- Column 1: Character Classes & Anchors -->
      <div class="space-y-2">
        <h4 class="font-semibold mb-2 text-white">Character Classes & Anchors</h4>
        <div class="space-y-1">
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>[abc]</code><span class="block text-left">Any one of a, b, or c</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>[^abc]</code><span class="block text-left">None of a, b, or c</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>[a-z]</code><span class="block text-left">Any lowercase letter a to z</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>[a-zA-Z]</code><span class="block text-left">Any letter a to z, uppercase or lowercase</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>^</code><span class="block text-left">Start of line</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>$</code><span class="block text-left">End of line</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>\A</code><span class="block text-left">Start of string</span>
          </div>
          <div class="grid grid-cols-[70px_1fr] gap-x-4 items-start">
            <code>\z</code><span class="block text-left">End of string</span>
          </div>
        </div>
      </div>

      <!-- Column 2: Common Patterns -->
      <div class="space-y-2">
        <h4 class="font-semibold mb-2 text-white">Common Patterns</h4>
        <div class="space-y-1">
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>.</code><span class="block text-left">Any character</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\s</code><span class="block text-left">Any whitespace character (space, tab, newline)</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\S</code><span class="block text-left">Any non-whitespace character</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\d</code><span class="block text-left">Any digit (0-9)</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\D</code><span class="block text-left">Any non-digit character</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\w</code><span class="block text-left">Any word character (letter, digit, underscore)</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\W</code><span class="block text-left">Any non-word character</span>
          </div>
          <div class="grid grid-cols-[20px_1fr] gap-x-4 items-start">
            <code>\b</code><span class="block text-left">Word boundary (between word and non-word)</span>
          </div>
        </div>
      </div>

      <!-- Column 3: Groups & Quantifiers -->
      <div class="space-y-2">
        <h4 class="font-semibold mb-2 text-white">Groups & Quantifiers</h4>
        <div class="space-y-1">
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>(...)</code><span class="block text-left">Capture group</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>(a|b)</code><span class="block text-left">a or b</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a?</code><span class="block text-left">Zero or one of a</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a*</code><span class="block text-left">Zero or more of a</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a+</code><span class="block text-left">One or more of a</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a{3}</code><span class="block text-left">Exactly 3 of a</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a{3,}</code><span class="block text-left">3 or more of a</span>
          </div>
          <div class="grid grid-cols-[50px_1fr] gap-x-4 items-start">
            <code>a{3,6}</code><span class="block text-left">Between 3 and 6 of a</span>
          </div>
        </div>
      </div>

    </div>

    <!-- Options row (Horizontal options) -->
    <div class="mt-4 pt-2 border-t border-gray-600 text-gray-400 text-sm text-center">
      <strong class="text-white mr-2">Options:</strong>

      <div class="inline-block">
        <code class="mx-2">i</code> Case insensitive
      </div>
      <div class="inline-block">
        <code class="mx-2">m</code> Make dot match newlines
      </div>
      <div class="inline-block">
        <code class="mx-2">x</code> Ignore whitespace in regex
      </div>
      <div class="inline-block">
        <code class="mx-2">o</code> Perform #{...} substitutions only once
      </div>

    </div>

  </div>
</div>
