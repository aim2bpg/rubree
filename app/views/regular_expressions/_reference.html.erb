<div id="reference-panel" class="w-full">
  <div class="text-center mb-4">
    <span id="reference-label" class="text-white font-semibold text-lg">
      <%= t("regular_expressions.reference.quick_reference", default: "Regex Quick Reference") %>
    </span>
  </div>

  <div class="bg-gray-900 rounded-lg shadow-lg pt-4 pb-4 text-gray-400 text-sm leading-snug">
    <div class="text-left w-full px-4">

      <div class="flex justify-center">
        <div class="mx-auto max-w-[1600px] w-full">

          <!-- Horizontal drag-scroll container (simple drag left/right) -->
          <div data-controller="drag-scroll" data-drag-scroll-horizontal-only-value="true" data-reference-scroll class="overflow-x-auto md:overflow-x-auto cursor-grab active:cursor-grabbing pb-2" style="-webkit-overflow-scrolling: touch;">
            <div class="block md:flex">
              <% sections = RegularExpression::Reference.sections %>
              <% is_ja = I18n.locale == :ja %>
              <!-- First 3 sections -->
              <div class="shrink-0 <%= is_ja ? "px-2" : "px-6" %> pb-2 w-full md:w-auto">
                <div class="flex flex-col md:flex-row gap-y-2 md:max-w-[calc(100vw-3rem)]">
                  <% sections[0..2].each_with_index do |section, idx| %>
                    <div class="space-y-0.5 min-w-0 <%= is_ja ? (idx == 0 ? "md:mr-2" : idx == 1 ? "md:mr-1" : "") : (idx < 2 ? "md:mr-16" : "") %>">
                      <label class="font-semibold mb-1 text-white text-sm"><%= section[:title] %></label>
                      <div class="space-y-0.5">
                        <% section[:items].each do |code, description| %>
                          <div class="grid <%= section[:col_class] %> items-start min-w-0 gap-x-1">
                            <code
                              data-controller="copy-code"
                              data-copy-code-target="source"
                              data-action="click->copy-code#copy"
                              data-copied-text="<%= j t("regular_expressions.results.copied") %>"
                              class="cursor-pointer hover:text-white transition duration-200 whitespace-nowrap text-sm pr-0"
                              title="<%= t("regular_expressions.click_to_copy", default: "Click to copy") %>"><%= code %></code>
                            <span class="break-words"><%= description %></span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  <!-- 4th section below 3rd on mobile -->
                  <% if sections[3] %>
                    <div class="space-y-0.5 min-w-0 md:hidden mt-2">
                      <label class="font-semibold mb-1 text-white text-sm"><%= sections[3][:title] %></label>
                      <div class="space-y-0.5">
                        <% sections[3][:items].each do |code, description| %>
                          <div class="grid <%= sections[3][:col_class] %> items-start min-w-0 gap-x-1">
                            <code
                              data-controller="copy-code"
                              data-copy-code-target="source"
                              data-action="click->copy-code#copy"
                              data-copied-text="<%= j t("regular_expressions.results.copied") %>"
                              class="cursor-pointer hover:text-white transition duration-200 whitespace-nowrap text-sm pr-0"
                              title="<%= t("regular_expressions.click_to_copy", default: "Click to copy") %>"><%= code %></code>
                            <span class="break-words"><%= description %></span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <!-- 4th section on the right (visible via scroll on PC) -->
              <% if sections[3] %>
                <div class="hidden md:block shrink-0 <%= is_ja ? "md:ml-1" : "md:ml-16" %>">
                  <div class="space-y-0.5 min-w-0">
                    <label class="font-semibold mb-1 text-white text-sm"><%= sections[3][:title] %></label>
                    <div class="space-y-0.5">
                      <% sections[3][:items].each do |code, description| %>
                        <div class="grid <%= sections[3][:col_class] %> items-start min-w-0 gap-x-1">
                          <code
                            data-controller="copy-code"
                            data-copy-code-target="source"
                            data-action="click->copy-code#copy"
                            data-copied-text="<%= j t("regular_expressions.results.copied") %>"
                            class="cursor-pointer hover:text-white transition duration-200 whitespace-nowrap text-sm pr-0"
                            title="<%= t("regular_expressions.click_to_copy", default: "Click to copy") %>"><%= code %></code>
                          <span class="break-words"><%= description %></span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>

      <!-- Options row inside the same grid so left edges align with reference columns -->
      <div class="col-span-1 md:col-span-3 mt-0 pt-2 border-t border-gray-600 text-gray-400 text-sm">
        <div class="flex items-start justify-center gap-x-6">
          <strong class="text-white mr-2 mb-0 whitespace-nowrap self-start"><%= t("regular_expressions.reference.options.options_label", default: "Options:") %></strong>
          <div class="w-full sm:w-auto">
            <!-- portrait: stack vertically (1 column) so items appear in separate rows; md+: inline centered -->
            <div class="space-y-0.5 sm:flex sm:items-center sm:space-x-8">
              <% RegularExpression::Reference.options.each do |code, label| %>
                <div class="flex items-center space-x-2">
                  <code
                    data-controller="copy-code"
                    data-copy-code-target="source"
                    data-action="click->copy-code#copy"
                    data-copied-text="<%= j t("regular_expressions.results.copied") %>"
                    class="cursor-pointer hover:text-white transition duration-200 px-1"
                    title="<%= t("regular_expressions.reference.click_to_copy", default: "Click to copy") %>"><%= code %></code>
                  <span><%= label %></span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
